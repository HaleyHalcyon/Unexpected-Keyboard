<?xml version="1.0" encoding="utf-8"?>
<!-- Adapted from Azerty Amélioré standard -->
<!-- https://norme-azerty.fr/ -->
<keyboard name="AZERTY (Français)" script="latin">
  <row>
    <key key0="a" key2="1" key4="à"/>
    <key key0="z" key1="accent_aigu" key2="2" key3="é" key4="½"/>
    <key key0="e" key1="accent_grave" key2="3" key3="è" key4="æ"/>
    <key key0="r" key1="accent_circonflexe" key2="4" key3="ê" key4="&amp;"/>
    <key key0="t" key1="accent_trema" key2="5" key3="(" key4=")"/>
    <key key0="y" key1="accent_macron" key2="6" key3="[" key4="]"/>
    <key key0="u" key2="7" key3="‘" key4="’"/>
    <key key0="i" key1="—" key2="8" key3="–" key4="accent_macron"/>
    <key key0="o" key1="œ" key2="9" key3="«" key4="»"/>
    <key key0="p" key1="&quot;" key2="0" key3="'"/>
  </row>
  <row>
    <key key0="q" key2="loc tab" key4="loc esc"/>
    <key key0="s" key1="\@" key2="\#" key3="loc ß" key4="§"/>
    <key key0="d" key1="loc accent_grave" key2="€" key3="loc accent_aigu" key4="$"/>
    <key key0="f" key4="¤"/>
    <key key0="g" key3="{" key4="}"/>
    <key key0="h"/>
    <key key0="j" key1="ù" key3="“" key4="”"/>
    <key key0="k" key1="moins:'−'" key2="±" key3="t.num:'‒'" key4="+"/>
    <key key0="l" key1="|" key2="%" key3="‹" key4="›"/>
    <key key0="m" key1="_" key3="-"/>
  </row>
  <row>
    <key width="2.0" key0="shift" key2="loc capslock"/>
    <key key0="w" key3="&lt;" key4=">"/>
    <key key0="x" key1="loc †" key2="÷" key4="×"/>
    <key key0="c" key1="loc accent_cedille" key2="ç" key3="," key4="\?"/>
    <key key0="v" key2="…" key3=";" key4="."/>
    <key key0="b" key1="°" key2="\\" key3=":" key4="/"/>
    <key key0="n" key1="loc accent_tilde" key2="§" key3="=" key4="!"/>
    <key width="2.0" key0="backspace" key2="delete"/>
  </row>
</keyboard>
